<View>
  <!-- Hiển thị ảnh CRF -->
  <Image name="crf_scan" value="$image_url"/>

  <!-- Hiển thị bản nháp HTML -->
  <HyperText name="crf_draft" value="$draft_html"/>

  <!-- Checklist QC (sửa lại đúng cú pháp $checks) -->
  <Choices name="qc_checklist" toName="crf_scan" choice="multiple" value="$checks">
    <Choice value="Confirm patient identifiers match between scan and draft."/>
    <Choice value="Validate visit date and site."/>
    <Choice value="Flag missing vitals or lab entries."/>
  </Choices>

  <!-- Textarea để ghi chú QC -->
  <TextArea name="qc_notes" toName="crf_scan" placeholder="Enter QC notes here"/>
</View>
